extends layout

block content
  div(class="form")
    form(action="/register",method="POST",id="register")
      input(class="formelement",type="text",id="user",placeholder="Student ID")
      br
      input(class="formelement",type="email",id="email",placeholder="Email")
      br
      input(class="formelement",type="password",id="password",placeholder="Password")
      br
      input(type="submit", class="btn", value="Register",id="reg")