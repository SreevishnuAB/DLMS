extends layout

block content
  div(class="form")
    h1 LOGIN
    form(action="/login",method="POST",id="login")
      input(class="formelement",type="text",name="user",placeholder="Username",id="user",required)
      br
      input(class="formelement",type="password",name="password",placeholder="Password",required)
      br
      input(type="submit", class="btn btn-cus")
  p
    a(class="btn btn-info btn-lg" id="reg-btn" data-toggle="modal" data-target="#myModal") Register
  include register.pug