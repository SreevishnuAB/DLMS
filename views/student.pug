extends layout

block content
  div(class="container table-responsive")
    table(class="table table-dark table-striped")
      tr
        th ID
        th Programme
        th Year of Joining
        th Semester
      tr
        td= session.user
        td= session.prog
        td= session.year
        td= session.sem

  div(class="form")
    form(action="",id="lreq",name="leave")
      table
        tr
          td
            label(for="event") Event:
          td
            select(id="event",class="lformelement")
              option(value="",disabled,selected) Select Event
                each val in event
                  option(value=`${val.event} ${val.to_date}`)= `${val.event}`
        tr
          td
            label(for="from") From:
          td
            input(type="date",min=date,value=date,id="from",class="lformelement",required)
        tr
          td
            label(for="to") To:
          td
            input(type="date",min=date,id="to",class="lformelement",required,readonly)
        tr
          td
            
    input(type="submit",form="leave",id="req",class="btn btn-cus")